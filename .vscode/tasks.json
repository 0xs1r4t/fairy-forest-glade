{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-colour=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "-I",
        "C:\\glfw-3.4.bin.WIN64\\glfw-3.4.bin.WIN64\\include",
        "-L",
        "C:\\glfw-3.4.bin.WIN64\\glfw-3.4.bin.WIN64\\lib-mingw-w64",
        "-I",
        "C:\\glew-2.1.0\\include",
        "-L",
        "C:\\glew-2.1.0\\lib\\Release\\x64",
        "-I",
        "C:\\vcpkg\\installed\\x64-windows\\include",
        "-L",
        "C:\\vcpkg\\installed\\x64-windows\\bin",
        "-lassimp",
        "-lglfw3dll",
        "-lglew32",
        "-lopengl32"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", ".",
        "-B", "build",
        "-A", "x64",
        "-DCMAKE_TOOLCHAIN_FILE=C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "-DVCPKG_TARGET_TRIPLET=x64-windows"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "CMake Build (Release)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build",
        "--config", "Release"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Copy Assets",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "Copy-Item -Path '${workspaceFolder}/src/shaders/*' -Destination '${workspaceFolder}/build/Release/shaders' -Recurse -Force; ",
        "Copy-Item -Path '${workspaceFolder}/src/textures/*' -Destination '${workspaceFolder}/build/Release/textures' -Recurse -Force; ",
        "Copy-Item -Path '${workspaceFolder}/src/models/*' -Destination '${workspaceFolder}/build/Release/models' -Recurse -Force"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Run Executable",
      "type": "shell",
      "command": "${workspaceFolder}/build/Release/fairy_forest_glade.exe",
      "problemMatcher": [],
      "group": "test",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Build & Run",
      "dependsOrder": "sequence",
      "dependsOn": [
        "CMake Configure",
        "CMake Build (Release)",
        "Copy Assets",
        "Run Executable"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
